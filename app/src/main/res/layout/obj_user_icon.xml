<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/obj_user_icon_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/obj_user_icon_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:gravity="center"
        android:text="Loading..."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/obj_user_icon_ib"
        android:layout_width="@dimen/fragment_profile_user_icon_size"
        android:layout_height="@dimen/fragment_profile_user_icon_size"
        android:layout_gravity="center"
        android:clickable="false"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/fragment_profile_role_icon9" />

    <View
        android:id="@+id/obj_user_icon_selectedView"
        android:layout_width="@dimen/fragment_profile_user_icon_size"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:clickable="false"
        android:layout_margin="5dp" />
</LinearLayout>