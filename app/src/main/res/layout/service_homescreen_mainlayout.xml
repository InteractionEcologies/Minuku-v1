<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_screen_service_relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/view_space">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_screen_service_chathead_img"
            android:layout_width="@dimen/activity_login_user_icon_size"
            android:layout_height="@dimen/activity_login_user_icon_size"
            android:layout_margin="@dimen/view_space"
            android:src="@mipmap/app_launcher" />

        <FrameLayout
            android:id="@+id/home_screen_service_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_screen_service_chathead_img"
            android:background="@color/dark"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="50dp"-->
                <!--android:layout_marginRight="50dp"-->
                <!--android:orientation="horizontal"-->
                <!--android:padding="20dp">-->

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="right"-->
                <!--android:text="Number of People Using:"-->
                <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"-->
                <!--android:textColor="@color/white" />-->

                <!--<Spinner-->
                <!--android:id="@+id/home_screen_service_spinner"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center"-->
                <!--android:padding="2dp"></Spinner>-->
                <!--</LinearLayout>-->

                <GridLayout
                    android:id="@+id/home_screen_service_gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="@dimen/view_space"
                    android:columnCount="6"
                    android:padding="@dimen/view_space"></GridLayout>

                <TextView
                    android:id="@+id/home_screen_service_tvSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/view_space"
                    android:gravity="center"
                    android:padding="@dimen/view_space"
                    android:text="All changes are saved!"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/lightgreen"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/home_screen_service_btnOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/view_space"
                    android:text="Open Minuku App"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/home_screen_service_btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_margin="@dimen/view_space"
                android:background="@drawable/background_remove_button" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
