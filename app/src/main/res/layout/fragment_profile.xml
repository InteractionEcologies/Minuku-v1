<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:text="Number of People Using:"
            android:layout_weight="1"/>
        <Spinner
            android:gravity="center"
            android:id="@+id/fragment_profile_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:padding="10dp"
                android:id="@+id/fragment_profile_role_icon1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:src="@drawable/fragment_profile_role_icon3" />
            <View
                android:id="@+id/fragment_profile_role_selectView1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/fragment_profile_role_icon2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:src="@drawable/fragment_profile_role_icon3"/>
            <View
                android:id="@+id/fragment_profile_role_selectView2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/brightblue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/fragment_profile_role_icon3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:src="@drawable/fragment_profile_role_icon3" />
            <View
                android:id="@+id/fragment_profile_role_selectView3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/brightblue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/fragment_profile_role_icon4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:src="@drawable/fragment_profile_role_icon3" />
            <View
                android:id="@+id/fragment_profile_role_selectView4"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/brightblue"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/fragment_profile_btnSave"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:text="Save"/>
    </LinearLayout>

</LinearLayout>